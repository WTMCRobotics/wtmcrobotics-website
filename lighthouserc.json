{
    "ci": {
        "collect": {
            "url": [
                "http://localhost/",
                "http://localhost/gallery",
                "http://localhost/sponsor",
                "http://localhost/join",
                "http://localhost/blog",
                "http://localhost/contact"
            ],
            "staticDistDir": "./dist/",
            "isSinglePageApplication": true
        },
        "settings": {
            "onlyCategories": [
                "performance",
                "accessibility",
                "best-practices",
                "seo"
            ]
        },
        "assert": {
            "preset": "lighthouse:no-pwa"
        },
        "upload": {
            "target": "temporary-public-storage"
        }
    }
}